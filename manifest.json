{
  "name": "Markdown Clipboard",
  "version": "1.0",
  "author": "Jen-Hsuan Hsieh",
  "description": "This plugin can improve your productivity by reducing the time for editing markdown syntax. It's also a memorandum for your visited website.",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_title": "Markdown Clipboard",
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "images/logoIcon-16.png",
    "32": "images/logoIcon-32.png",
    "48": "images/logoIcon-48.png",
   "128": "images/logoIcon-128.png" 
  },
  "manifest_version": 1,
  "background": {  
    "scripts": ["background.js"],  
    "persistent": true 
  }  
}