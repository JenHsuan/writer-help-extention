{
  "name": "Selected Text",
  "version": "1.3",
  "description": "Selected Text",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["selection.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Selected Text",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}